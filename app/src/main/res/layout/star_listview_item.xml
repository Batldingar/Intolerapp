<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/star_listView_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name - Brand"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="2dp">

        <RatingBar android:id="@+id/star_listView_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@android:style/Widget.DeviceDefault.RatingBar.Small">
        </RatingBar>

        <TextView android:id="@+id/star_listView_ratings_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Intolerance (x Ratings)">
        </TextView>

    </LinearLayout>

</LinearLayout>